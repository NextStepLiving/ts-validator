{
    "compilerOptions": {
        "experimentalDecorators": true,
        "declarationFiles": true,
        "noExternalResolve": false,
        "noImplicityAny": false,
        "noEmitOnError": false,
        "module": "commonjs",
        "target": "ES5"
    },
    "filesGlob": [
        "./**/*.ts",
        "!./node_modules/**/*.ts"
    ],
    "files": [
        "./src/**/*.ts",
        "./src/main.ts",
        "./typings/angularjs/angular.d.ts",
        "./typings/jquery/jquery.d.ts",
        "./typings/node/node.d.ts"
    ]
}
